{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "includeEntryExports": true,
  "ignoreDependencies": ["common", ".*-(css|sass|scss)", "@pnpm/*", "@typescript/native-preview"],
  "ignoreBinaries": ["only-allow"],
  "ignore": ["**/_*.ts"],
  "workspaces": {
    ".": {
      "includeEntryExports": false
    },
    "bin": {
      "entry": ["scripts/*.ts"],
      "project": ["scripts/**"]
    },
    "ui/*": {
      "entry": ["src/build/*.ts"],
      "project": ["src/**"]
    },
    "ui/@build/*": {
      "entry": ["src/main.ts"],
      "project": ["src/**"]
    },
    "ui/@build/vendor": {
      "entry": ["src/index.ts"],
      "project": ["src/**"],
      "ignoreDependencies": [".*"]
    }
  }
}
